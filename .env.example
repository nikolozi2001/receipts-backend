# =================================
# RECEIPTS BACKEND API CONFIGURATION
# =================================

# Server Configuration
PORT=3001
NODE_ENV=development

# PM2 Configuration
PM2_INSTANCES=1
PM2_EXEC_MODE=fork

# CORS Configuration
# For development, allow all origins. In production, specify your frontend domain
CORS_ORIGIN=*

# Police.ge API Configuration
# These are the endpoints for the Georgian Police database
POLICE_BASE_URL=https://police.ge/protocol/index.php
POLICE_SEARCH_URL=https://police.ge/protocol/index.php?url=protocols/searchByAuto

# Request Configuration
# Timeout for external API requests (in milliseconds)
REQUEST_TIMEOUT=30000

# User Agent for police.ge requests
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Rate Limiting (requests per minute per IP)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Security Headers
ENABLE_SECURITY_HEADERS=true

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Cache Configuration (for future use)
# REDIS_URL=redis://localhost:6379
# CACHE_TTL=300

# Database Configuration (for future use if needed)
# DATABASE_URL=
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=receipts
# DB_USER=
# DB_PASSWORD=

# External Services (for future integrations)
# JWT_SECRET=your-jwt-secret-key
# API_KEY=your-external-api-key

# Health Check Configuration
HEALTH_CHECK_ENDPOINT=/health

# Development/Debug Settings
DEBUG_MODE=true
VERBOSE_LOGGING=false