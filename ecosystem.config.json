{
  "apps": [
    {
      "name": "receipts-backend",
      "script": "index.js",
      "instances": 1,
      "exec_mode": "fork",
      "env": {
        "NODE_ENV": "development",
        "PORT": 3001
      },
      "env_production": {
        "NODE_ENV": "production",
        "PORT": 3001
      },
      "env_staging": {
        "NODE_ENV": "staging",
        "PORT": 3002
      },
      "watch": false,
      "ignore_watch": [
        "node_modules",
        "logs",
        "*.log"
      ],
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "error_file": "logs/err.log",
      "out_file": "logs/out.log",
      "log_file": "logs/combined.log",
      "pid_file": "pids/receipts-backend.pid",
      "max_memory_restart": "1G",
      "restart_delay": 4000,
      "max_restarts": 5,
      "min_uptime": "10s",
      "kill_timeout": 5000,
      "wait_ready": true,
      "listen_timeout": 8000,
      "autorestart": true,
      "source_map_support": false,
      "merge_logs": true,
      "time": true
    },
    {
      "name": "receipts-backend-cluster",
      "script": "index.js",
      "instances": "max",
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3001
      },
      "watch": false,
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "error_file": "logs/cluster-err.log",
      "out_file": "logs/cluster-out.log",
      "log_file": "logs/cluster-combined.log",
      "pid_file": "pids/receipts-backend-cluster.pid",
      "max_memory_restart": "1G",
      "restart_delay": 4000,
      "max_restarts": 10,
      "min_uptime": "10s",
      "kill_timeout": 5000,
      "wait_ready": true,
      "listen_timeout": 8000,
      "autorestart": true,
      "merge_logs": true,
      "time": true
    }
  ]
}